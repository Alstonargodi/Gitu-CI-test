<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.fragment.repositoryuser.RepositoryFragment">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/Reporecview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/itemcv_repository" />

    <ProgressBar
        android:id="@+id/Repoprogress"
        style="?android:attr/progressBarStyle"
        android:layout_width="57dp"
        android:layout_height="43dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/Reporecview"
        app:layout_constraintStart_toStartOf="@+id/Reporecview"
        app:layout_constraintTop_toTopOf="@+id/Reporecview"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/emptyStatment_repo"
        style="@style/TvTitleStyle"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:gravity="center|top"
        android:textSize="20sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.644"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.055" />
</androidx.constraintlayout.widget.ConstraintLayout>