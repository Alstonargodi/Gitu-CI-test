<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Githubuser.Light" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/maincolor</item>

        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!-- Customize your theme here. -->
        <item name="titleTextAppearance">@style/ToolBarStyleLight</item>
        <item name="android:strokeColor">@color/white</item>


        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Status bar color. -->


    </style>


    <style name="MyTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ToolBarStyleLight" parent="android:Widget.Toolbar">
        <item name="android:fontFamily">@font/apexsans</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="tint">@color/white</item>
        <item name="android:titleTextColor">@color/maincolor</item>
    </style>


    <style name="TvResultStyle"  parent="Theme.Githubuser.Light">
        <item name="android:fontFamily">@font/apexsans</item>
        <item name="android:textSize">15sp</item>
        <item name="android:titleTextColor">@color/white</item>
    </style>

    <style name="TvTitleStyle"  parent="Theme.Githubuser.Light" >
        <item name="android:fontFamily">@font/apexsans</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:titleTextColor">@color/white</item>
    </style>

    <style name="IconStyle" parent="Theme.Githubuser.Light" >
        <item name="iconTint">@color/white</item>
        <item name="android:strokeColor">@color/white</item>
    </style>

    <style name="CardStyle">
        <item name="background">@color/cardview</item>
    </style>




</resources>